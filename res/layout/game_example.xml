<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/portada2"
    android:orientation="vertical" >

    <!-- puertas -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/puerta1"
            style="@style/EstiloCarta"
            android:src="@drawable/puerta_rojo" />

        <ImageView
            android:id="@+id/puerta2"
            style="@style/EstiloCarta"
            android:src="@drawable/puerta_marron" />

        <ImageView
            android:id="@+id/puerta3"
            style="@style/EstiloCarta"
            android:src="@drawable/puerta_azul" />

        <ImageView
            android:id="@+id/puerta4"
            style="@style/EstiloCarta"
            android:src="@drawable/puerta_verde" />

        <ImageView
            android:id="@+id/puerta5"
            style="@style/EstiloCarta"
            android:src="@drawable/puerta" />

        <ImageView
            android:id="@+id/puerta6"
            style="@style/EstiloCarta"
            android:src="@drawable/puerta" />

        <ImageView
            android:id="@+id/puerta7"
            style="@style/EstiloCarta"
            android:src="@drawable/puerta" />

        <ImageView
            android:id="@+id/puerta8"
            style="@style/EstiloCarta"
            android:src="@drawable/puerta" />
    </LinearLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/laberinto1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp" >

        <ImageView
            style="@style/EstiloCarta"
            android:src="@drawable/llave_rojo" />

        <ImageView
            style="@style/EstiloCarta"
            android:layout_marginLeft="10dp"
            android:src="@drawable/sol_rojo" />

        <ImageView
            style="@style/EstiloCarta"
            android:layout_marginLeft="20dp"
            android:src="@drawable/luna_rojo" />

        <ImageView
            style="@style/EstiloCarta"
            android:layout_marginLeft="30dp"
            android:src="@drawable/sol_verde" />

        <ImageView
            style="@style/EstiloCarta"
            android:layout_marginLeft="40dp"
            android:src="@drawable/llave_verde" />

        <ImageView
            style="@style/EstiloCarta"
            android:layout_marginLeft="50dp"
            android:src="@drawable/luna_marron" />

        <ImageView
            style="@style/EstiloCarta"
            android:layout_marginLeft="60dp"
            android:src="@drawable/llave_marron" />

        <ImageView
            style="@style/EstiloCarta"
            android:layout_marginLeft="70dp"
            android:src="@drawable/luna_marron" />
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/laberinto2"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp" >

        <ImageView
            style="@style/EstiloCarta"
            android:src="@drawable/llave_rojo" />

        <ImageView
            style="@style/EstiloCarta"
            android:layout_marginLeft="10dp"
            android:src="@drawable/sol_rojo" />

        <ImageView
            style="@style/EstiloCarta"
            android:layout_marginLeft="20dp"
            android:src="@drawable/luna_rojo" />

        <ImageView
            style="@style/EstiloCarta"
            android:layout_marginLeft="30dp"
            android:src="@drawable/sol_verde" />

        <ImageView
            style="@style/EstiloCarta"
            android:layout_marginLeft="40dp"
            android:src="@drawable/llave_verde" />

        <ImageView
            style="@style/EstiloCarta"
            android:layout_marginLeft="50dp"
            android:src="@drawable/luna_marron" />

        <ImageView
            style="@style/EstiloCarta"
            android:layout_marginLeft="60dp"
            android:src="@drawable/llave_marron" />

        <ImageView
            style="@style/EstiloCarta"
            android:layout_marginLeft="70dp"
            android:src="@drawable/luna_marron" />
    </RelativeLayout>

    <!-- limbo y descartes -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:orientation="horizontal" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/limbo"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:minWidth="80dp" >

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="0dp"
                android:src="@drawable/puerta_marron" />

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="20dp"
                android:src="@drawable/pesadilla" />
        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/descartes"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical|right" >

            <ImageView
                style="@style/EstiloCarta"
                android:src="@drawable/llave_rojo" />

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="4dp"
                android:src="@drawable/sol_rojo" />

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="8dp"
                android:src="@drawable/luna_rojo" />

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="12dp"
                android:src="@drawable/sol_verde" />

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="16dp"
                android:src="@drawable/llave_verde" />

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="20dp"
                android:src="@drawable/luna_marron" />

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="24dp"
                android:src="@drawable/llave_marron" />

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="28dp"
                android:src="@drawable/llave_azul" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/mensaje"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/iniciar" />

    <!-- mazo y mano -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/back" />

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/back" />

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/back" />

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/back" />

            <ImageView
                style="@style/EstiloCarta"
                android:src="@drawable/back" />
        </RelativeLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mano"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/carta1"
                style="@style/EstiloCarta.Mano"
                android:src="@drawable/llave_azul" />

            <ImageView
                android:id="@+id/carta2"
                style="@style/EstiloCarta.Mano"
                android:src="@drawable/luna_azul" />

            <ImageView
                android:id="@+id/carta3"
                style="@style/EstiloCarta.Mano"
                android:src="@drawable/sol_marron" />

            <ImageView
                android:id="@+id/carta4"
                style="@style/EstiloCarta.Mano"
                android:src="@drawable/luna_verde" />

            <ImageView
                android:id="@+id/carta5"
                style="@style/EstiloCarta.Mano"
                android:src="@drawable/sol_azul" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="5dp"
            android:text="@string/numCartas" />

        <TextView
            android:id="@+id/numCartas"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="left" />
    </LinearLayout>

</LinearLayout>