<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/portada2"
    android:orientation="vertical" >

    <!-- puertas -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/puerta1"
            style="@style/EstiloCarta.Mano"
            android:src="@drawable/puerta" />

        <ImageView
            android:id="@+id/puerta2"
            style="@style/EstiloCarta.Mano"
            android:src="@drawable/puerta" />

        <ImageView
            android:id="@+id/puerta3"
            style="@style/EstiloCarta.Mano"
            android:src="@drawable/puerta" />

        <ImageView
            android:id="@+id/puerta4"
            style="@style/EstiloCarta.Mano"
            android:src="@drawable/puerta" />

        <ImageView
            android:id="@+id/puerta5"
            style="@style/EstiloCarta.Mano"
            android:src="@drawable/puerta" />

        <ImageView
            android:id="@+id/puerta6"
            style="@style/EstiloCarta.Mano"
            android:src="@drawable/puerta" />

        <ImageView
            android:id="@+id/puerta7"
            style="@style/EstiloCarta.Mano"
            android:src="@drawable/puerta" />

        <ImageView
            android:id="@+id/puerta8"
            style="@style/EstiloCarta.Mano"
            android:src="@drawable/puerta" />
    </LinearLayout>

    <!-- laberinto -->

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/laberinto1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/laberinto2"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp" />

    <!-- limbo y descartes -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:orientation="horizontal" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/limbo"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:minWidth="80dp" />

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/descartes"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|right" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/roundborder">
        <TextView
            android:id="@+id/mensaje" 
            android:text="@string/iniciar"
            android:textColor="#222"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="8sp" />
    </ScrollView>
    <!-- mazo y mano -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/back" />

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/back" />

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/back" />

            <ImageView
                style="@style/EstiloCarta"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/back" />

            <ImageView
                style="@style/EstiloCarta"
                android:src="@drawable/back" />
        </RelativeLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mano"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/carta1"
                style="@style/EstiloCarta.Mano"
                android:src="@drawable/back" />

            <ImageView
                android:id="@+id/carta2"
                style="@style/EstiloCarta.Mano"
                android:src="@drawable/back" />

            <ImageView
                android:id="@+id/carta3"
                style="@style/EstiloCarta.Mano"
                android:src="@drawable/back" />

            <ImageView
                android:id="@+id/carta4"
                style="@style/EstiloCarta.Mano"
                android:src="@drawable/back" />

            <ImageView
                android:id="@+id/carta5"
                style="@style/EstiloCarta.Mano"
                android:src="@drawable/back" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="5dp"
            android:text="@string/numCartas" />

        <TextView
            android:id="@+id/numCartas"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="1dp"
            android:text="0"
            android:gravity="left" />
    </LinearLayout>

</LinearLayout>