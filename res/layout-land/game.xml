<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/portada2_land"
    android:orientation="vertical" >

    <!-- puertas -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/puerta1"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:src="@drawable/puerta_rojo" />

        <ImageView
            android:id="@+id/puerta2"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:src="@drawable/puerta_marron" />

        <ImageView
            android:id="@+id/puerta3"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:src="@drawable/puerta_azul" />

        <ImageView
            android:id="@+id/puerta4"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:src="@drawable/puerta_verde" />

        <ImageView
            android:id="@+id/puerta5"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:src="@drawable/puerta" />

        <ImageView
            android:id="@+id/puerta6"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:src="@drawable/puerta" />

        <ImageView
            android:id="@+id/puerta7"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:src="@drawable/puerta" />

        <ImageView
            android:id="@+id/puerta8"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:src="@drawable/puerta" />
    </LinearLayout>

    <!-- mazo y laberinto -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true"
                android:src="@drawable/back" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:adjustViewBounds="true"
                android:src="@drawable/back" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:adjustViewBounds="true"
                android:src="@drawable/back" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:adjustViewBounds="true"
                android:src="@drawable/back" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:src="@drawable/back" />
        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/laberinto"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:src="@drawable/llave_rojo" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/sol_rojo" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/luna_rojo" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/sol_verde" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:adjustViewBounds="true"
                android:src="@drawable/llave_verde" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:adjustViewBounds="true"
                android:src="@drawable/luna_marron" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:adjustViewBounds="true"
                android:src="@drawable/llave_marron" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/mensaje"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/iniciar" />

    <!-- limbo, mano y descartes -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/limbo"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:minWidth="80dp" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="0dp"
                android:adjustViewBounds="true"
                android:src="@drawable/puerta_marron" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/pesadilla" />
        </RelativeLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mano"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/carta1"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:src="@drawable/llave_azul" />

            <ImageView
                android:id="@+id/carta2"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:src="@drawable/luna_azul" />

            <ImageView
                android:id="@+id/carta3"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:src="@drawable/sol_marron" />

            <ImageView
                android:id="@+id/carta4"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:src="@drawable/luna_verde" />

            <ImageView
                android:id="@+id/carta4"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:src="@drawable/sol_azul" />
        </LinearLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/descartes"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:src="@drawable/llave_rojo" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:adjustViewBounds="true"
                android:src="@drawable/sol_rojo" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/luna_rojo" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:adjustViewBounds="true"
                android:src="@drawable/sol_verde" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:adjustViewBounds="true"
                android:src="@drawable/llave_verde" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/luna_marron" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="24dp"
                android:adjustViewBounds="true"
                android:src="@drawable/llave_marron" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>